<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--线性布局-->
    <!-- android:orientation="vertical 在垂直方向依次排开-->
    <!-- android:gravity="center_horizontal" 使得子view水平居中-->

    <!-- android:layout_gravity 如果对齐方式和 android:orientation 方向一致就会失效-->

    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:backgroundTint="#fcd217"
        android:layout_gravity="center_vertical"
        android:text="按钮1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:backgroundTint="#2b73af"
        android:layout_gravity="center_vertical"
        android:text="按钮2"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:backgroundTint="#6e8b74"
        android:layout_gravity="center_vertical"
        android:text="按钮3"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="4"
        android:backgroundTint="#a35c8f"
        android:layout_gravity="center_vertical"
        android:text="按钮4"/>


</LinearLayout>